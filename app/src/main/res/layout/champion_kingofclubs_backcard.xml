<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <View
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_175sdp"
                android:background="@drawable/bg_backcard"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_150sdp"
                android:background="@drawable/backcard"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/purple2"
                    android:text="Use This     Champion?"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/poppins_semibold"/>

                <Button
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Use"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_20ssp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/brokenwhite"
                    android:background="@drawable/bg_btn_ungu"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/champion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="King Of Clubs"
            android:layout_gravity="center"
            android:textColor="@color/brokenwhite"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/poppins_light"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
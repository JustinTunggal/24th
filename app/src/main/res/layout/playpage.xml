<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".play_activity"
    android:background="@color/purple1"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:paddingBottom="@dimen/_50sdp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Round"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/brokenwhite"
                    android:textSize="@dimen/_25sdp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_100sdp"
                    android:gravity="center">

                    <View
                        android:id="@+id/view"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/home_historycardbackground" />

                    <TextView
                        android:id="@+id/round_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="0"
                        android:textColor="@color/purple3"
                        android:textSize="@dimen/_20ssp" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/playTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="00:00"
                android:layout_marginTop="@dimen/_15ssp"
                android:textColor="@color/brokenwhite"
                android:textSize="@dimen/_25sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/playcard1"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:src="@drawable/as_club" />

                <ImageView
                    android:id="@+id/playcard2"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_weight="1"
                    android:src="@drawable/as_heart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/playcard3"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:src="@drawable/as_diamond" />

                <ImageView
                    android:id="@+id/playcard4"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_weight="1"
                    android:src="@drawable/as_spade" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_25sdp">

                <View
                    android:id="@+id/answerslot_1"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_2"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_3"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_4"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_5"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_6"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_7"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_8"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp">

                <View
                    android:id="@+id/answerslot_9"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_10"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_11"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_12"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_13"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_14"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_15"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>

                <View
                    android:id="@+id/answerslot_16"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_margin="@dimen/_2sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_25sdp"
                android:gravity="center">

                <Button
                    android:id="@+id/option1"
                    android:textSize="@dimen/_20ssp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/purple3"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_2sdp"
                    android:text="+" />

                <Button
                    android:id="@+id/option2"
                    android:textSize="@dimen/_20ssp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/purple3"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_2sdp"
                    android:text="-" />

                <Button
                    android:id="@+id/option3"
                    android:textSize="@dimen/_20ssp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/purple3"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_2sdp"
                    android:text="X" />

                <Button
                    android:id="@+id/option4"
                    android:textSize="@dimen/_20ssp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/purple3"
                    android:background="@drawable/home_historycardbackground"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_2sdp"
                    android:text="/" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center">

            <Button
                android:id="@+id/option5"
                android:textSize="@dimen/_20ssp"
                android:paddingTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/purple3"
                android:background="@drawable/home_historycardbackground"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_2sdp"
                android:text="(" />

            <Button
                android:id="@+id/option6"
                android:textSize="@dimen/_20ssp"
                android:fontFamily="@font/poppins_semibold"
                android:paddingTop="@dimen/_5sdp"
                android:textColor="@color/purple3"
                android:background="@drawable/home_historycardbackground"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_2sdp"
                android:text=")" />

            <Button
                android:id="@+id/option7"
                android:textSize="@dimen/_20ssp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/purple3"
                android:background="@drawable/home_historycardbackground"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_2sdp"
                android:text="^" />

            <Button
                android:id="@+id/option8"
                android:textSize="@dimen/_20ssp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/purple3"
                android:background="@drawable/home_historycardbackground"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_2sdp"
                android:text="!" />

        </LinearLayout>

            <Button
                android:id="@+id/challangebtn"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:text="Challange"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/purple1"
                android:background="@drawable/home_historycardbackground"
                android:textSize="@dimen/_25ssp"/>

            <Button
                android:id="@+id/passbtn"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:text="Pass"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/purple1"
                android:background="@drawable/home_historycardbackground"
                android:textSize="@dimen/_25ssp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>